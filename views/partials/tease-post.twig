{% extends 'partials/tease.twig' %}

{% block content %}
    <h3><a href="{{ post.link }}">{{ post.title }}</a></h3>

    <p>
        {{
            post.excerpt({
                words: 5,
                read_more: 'Lire la suite'
            }) | uppercaseFirstWord
        }}
    </p>

    {% if post.thumbnail.src %}
        <img src="{{ post.thumbnail.src }}" />
    {% endif %}
{% endblock %}
