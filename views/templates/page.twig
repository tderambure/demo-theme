{% extends 'layouts/base.twig' %}

{% block content %}
    <article class="post-type-{{ post.type }}" id="post-{{ post.id }}">
        <h2>{{ post.title }}</h2>

        <img src="{{ post.thumbnail.src|resize(1200, 300) }}" />
        <section>
            {{ post.content }}
        </section>
    </article>
{% endblock %}
